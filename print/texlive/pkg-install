#!/bin/sh

set -x

PREFIX=${PKG_PREFIX}
LOCALBASE=${PKG_PREFIX}

case $2 in 
    PRE-INSTALL)
	;;
    POST-INSTALL)
	install  -d -m 1777 -o root -g wheel /var/texmf
	install  -d -m 0755 -o root -g wheel /var/db/tlpkg/backups
	install  -d -m 0755 -o root -g wheel /var/db/tlpkg/tlpobj
#	${PREFIX}/bin/texconfig-sys rehash
#	${PREFIX}/bin/texconfig-sys init
	;;
esac
#EOF
