--- ./texk/kpathsea/texmf.cnf.orig	2015-11-14 21:22:04.404991000 +0200
+++ ./texk/kpathsea/texmf.cnf	2015-11-15 01:13:10.118129000 +0200
@@ -51,7 +51,7 @@
 % Redistributors will probably want $SELFAUTODIR/share, i.e., /usr/share.
 % Kpathsea sets SELFAUTOLOC (the directory with the binary),
 % SELFAUTODIR (its parent), and SELFAUTOPARENT (its grandparent).
-TEXMFROOT = $SELFAUTOPARENT
+TEXMFROOT = /usr/local/share
 
 % The main tree of distributed packages and programs:
 TEXMFDIST = $TEXMFROOT/texmf
@@ -60,26 +60,27 @@
 % Keep the variable name.
 TEXMFMAIN = $TEXMFDIST
 
-% Local additions to the distribution trees.
-TEXMFLOCAL = $SELFAUTOGRANDPARENT/texmf-local
 
 % TEXMFSYSVAR, where *-sys store cached runtime data.
-TEXMFSYSVAR = $TEXMFROOT/texmf-var
+TEXMFSYSVAR = /var/texmf
+
+% Local additions to the distribution trees.
+TEXMFLOCAL = $TEXMFSYSVAR/local
 
 % TEXMFSYSCONFIG, where *-sys store configuration data.
-TEXMFSYSCONFIG = $TEXMFROOT/texmf-config
+TEXMFSYSCONFIG = $TEXMFSYSVAR/config
 
 % Per-user texmf tree(s) -- organized per the TDS, as usual.  To define
 % more than one per-user tree, set this to a list of directories in
 % braces, as described above.  (This used to be HOMETEXMF.)  ~ expands
 % to %USERPROFILE% on Windows, $HOME otherwise.
-TEXMFHOME = ~/texmf
+TEXMFHOME = ~/.texmf
 
 % TEXMFVAR, where texconfig/updmap/fmtutil store cached runtime data.
-TEXMFVAR = ~/.texlive2015/texmf-var
+TEXMFVAR = $TEXMFHOME/var
 
 % TEXMFCONFIG, where texconfig/updmap/fmtutil store configuration data.
-TEXMFCONFIG = ~/.texlive2015/texmf-config
+TEXMFCONFIG = $TEXMFHOME/config
 
 % List all the texmf trees. For an explanation of what they are, see the
 % TeX Live manual.
@@ -601,7 +602,7 @@
 openin_any = a
 
 % Write .log/.dvi/etc. files here, if the current directory is unwritable.
-%TEXMFOUTPUT = /tmp
+%TEXMFOUTPUT = /var/tmp
 
 % If a dynamic file creation fails, log the command to this file, in
 % either the current directory or TEXMFOUTPUT.  Set to the
@@ -656,7 +657,7 @@
 % interactive `e' option.  %d is replaced by the line number and %s by
 % the current filename.  The default is specified at compile-time, and
 % we let that stay in place since different platforms like different values.
-%TEXEDIT = vi +%d '%s'                    % default for Unix
+%TEXEDIT = vim +%d '%s'                    % default for Unix
 %TEXEDIT = texworks --position=+%d "%s"   % default for Windows
 %MFEDIT = ${TEXEDIT}
 %MPEDIT = ${TEXEDIT}
