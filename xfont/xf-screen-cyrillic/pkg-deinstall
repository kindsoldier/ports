#!/bin/sh

set -x

PREFIX=${PKG_PREFIX}
LOCALBASE=${PKG_PREFIX}

case $2 in 
    DEINSTALL)
	;;
    POST-DEINSTALL)
	${LOCALBASE}/bin/fc-cache -f -v ${PREFIX}/share/fonts/X11/cyrillic
	${LOCALBASE}/bin/mkfontdir ${PREFIX}/share/fonts/X11/cyrillic
	${LOCALBASE}/bin/mkfontscale ${PREFIX}/share/fonts/X11/cyrillic
	;;
esac
exit 0
#EOF
