PORTNAME=	XML-SAX
PORTVERSION=	0.99
CATEGORIES=	textproc perl5
MASTER_SITES=	CPAN
PKGNAMEPREFIX=	p5-

MAINTAINER=	perl@FreeBSD.org
COMMENT=	Simple API for XML


BUILD_DEPENDS+=	p5-XML-NamespaceSupport>=0.03:perl/p5-XML-NamespaceSupport
BUILD_DEPENDS+=		p5-XML-SAX-Base>=1.05:perl/p5-XML-SAX-Base
