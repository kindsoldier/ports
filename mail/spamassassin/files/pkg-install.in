#!/bin/sh

set -x

SA_GROUP="%%SA_GROUP%%"
SA_OWNER="%%SA_OWNER%%"
SA_GROUPID="%%SA_GROUPID%%"
SA_OWNERID="%%SA_OWNERID%%"

SA_RUNDIR="%%SA_RUNDIR%%"
SA_DBDIR="%%SA_DBDIR%%"
SA_SPOOLDIR="%%SA_SPOOLDIR%%"
SA_CONFDIR="%%SA_CONFDIR%%"

PKG_PREFIX="/notexist"

case $2 in 
    PRE-INSTALL)
	pw group add ${SA_GROUP}  -g ${SA_GROUPID}
	pw user add ${SA_OWNER} -g ${SA_GROUP}  \
	    -d ${SA_SPOOLDIR} -s /usr/sbin/nologin -u ${SA_OWNERID} \
	    -c "spamassasin"
	pw user mod ${SA_OWNER} -d ${SA_SPOOLDIR}
	pw group mod ${SA_GROUP} -M ${SA_OWNER}
	pw group show ${SA_GROUP}
	pw user show ${SA_OWNER}
	install -d -o  ${SA_OWNER} -g ${SA_GROUP} -m 0750 ${SA_RUNDIR}
	install -d -o  ${SA_OWNER} -g ${SA_GROUP} -m 0750 ${SA_DBDIR}
	install -d -o  ${SA_OWNER} -g ${SA_GROUP} -m 0750 ${SA_SPOOLDIR}
	install -d -o root -g wheel -m 0750 ${SA_CONFDIR}
	;;
    POST-INSTALL)
	;;
esac
exit 0
#EOF
