#!/bin/sh

set -x

MUSICPD_DB_DIR="%%MUSICPD_DB_DIR%%"
#MUSICPD_RUN_DIR="%%MUSICPD_RUN_DIR%%"
#MUSICPD_CONF_DIR="%%MUSICPD_CONF_DIR%%"

OWNER="%%MUSICPD_OWNER%%"
GROUP="%%MUSICPD_GROUP%%"

OWNER_ID="%%MUSICPD_OID%%"
GROUP_ID="%%MUSICPD_GID%%"

PKG_PREFIX="/notexist"

case $2 in 
    PRE-INSTALL)
	pw group add ${GROUP} -g ${GROUP_ID}
	pw user add ${OWNER}  -g ${GROUP} \
	    -d ${PKG_PREFIX} -s "/usr/sbin/nologin" -u ${OWNER_ID} \
	    -c "musicpd"
	pw group mod ${GROUP} -M ${OWNER}
	pw group show ${GROUP}
	pw user show ${OWNER}

	for dir in ${MUSICPD_DB_DIR} ${MUSICPD_DB_DIR}/playlists; do
	    mkdir -p ${dir}
	    chmod 0755 ${dir}
	    chown ${OWNER}:${GROUP} ${dir}
	done
	;;
    POST-INSTALL)
	;;
esac
#EOF
