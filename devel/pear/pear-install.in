#!/bin/sh
#
# Register the package $1 in the port registry

#set -x

PREFIX=${PKG_PREFIX:=%%PREFIX%%}
PEAR=${PREFIX}/bin/pear
PKGREGDIR=${PREFIX}/share/pear/packages/$1

[ "x$1" = "x" ] && exit 1

case $2 in 
    POST-INSTALL)
	${PEAR} install -r -n -f ${PKGREGDIR}/package.xml
    ;;
esac
exit 0
#EOF

