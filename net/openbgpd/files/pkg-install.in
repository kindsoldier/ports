#!/bin/sh

set -x

BGPD_OWNER="%%BGPD_OWNER%%"
BGPD_GROUP="%%BGPD_GROUP%%"
BGPD_OWNER_ID="%%BGPD_OWNER_ID%%"
BGPD_GROUP_ID="%%BGPD_GROUP_ID%%"

case $2 in 
    PRE-INSTALL)
	pw group add ${BGPD_GROUP} -g ${BGPD_GROUP_ID} 
	pw user add ${BGPD_OWNER}  -g ${BGPD_GROUP} \
	    -d "/var/empty" -s "/usr/sbin/nologin" -u ${BGPD_OWNER_ID} \
	    -c "openbgpd"
	pw group mod ${BGPD_GROUP} -M ${BGPD_OWNER}
	pw group show ${BGPD_GROUP}
	pw user show ${BGPD_OWNER}

	;;
    POST-INSTALL)
	;;
esac
#EOF
