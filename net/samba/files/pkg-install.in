#!/bin/sh -x


case $2 in 
    PRE-INSTALL)
	SAMBA_LOGDIR="%%SAMBA_LOGDIR%%";
	SAMBA_LOCKDIR="%%SAMBA_LOCKDIR%%";
	SAMBA_RUNDIR="%%SAMBA_RUNDIR%%";

	SAMBA_PRIVATEDIR="%%SAMBA_PRIVATEDIR%%";
	SAMBA_CONFDIR="%%SAMBA_CONFDIR%%";

	SAMBA_OWNER="%%SAMBA_OWNER%%";
	SAMBA_GROUP="%%SAMBA_GROUP%%";
	for dir in ${SAMBA_LOGDIR} ${SAMBA_LOCKDIR} ${SAMBA_RUNDIR} ${SAMBA_CONFDIR} ${SAMBA_PRIVATEDIR}; do
	    mkdir -p ${dir} ;
	    chown ${SAMBA_OWNER}:${SAMBA_GROUP} ${dir}; 
	done
	chmod 0755 ${SAMBA_LOGDIR}
	chmod 0755 ${SAMBA_LOCKDIR}
	chmod 0755 ${SAMBA_RUNDIR}
	chmod 0700 ${SAMBA_PRIVATEDIR}
	;;
    POST-INSTALL)
	;;
esac
#EOF

