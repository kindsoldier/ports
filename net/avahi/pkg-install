#!/bin/sh

set -x


case $2 in 
    PRE-INSTALL)
	AVAHI_OWNER="avahi"
	AVAHI_GROUP="avahi"
	AVAHI_OWNERID="558"
	AVAHI_GROUPID="558"
	PKG_PREFIX="/notexist"
	AVAHI_NAME="avahi"
	AVAHI_SHELL="/usr/bin/nologin"
	pw group add ${AVAHI_GROUP} -g ${AVAHI_GROUPID}
	pw group show ${AVAHI_GROUP}

	pw user add ${AVAHI_OWNER} -g ${AVAHI_GROUP} \
		-d ${PKG_PREFIX} -s ${AVAHI_SHELL} -u ${AVAHI_OWNERID} -c "${AVAHI_NAME}"
	pw user show ${AVAHI_OWNER}

	pw group mod ${AVAHI_GROUP} -M ${AVAHI_OWNER}
	pw group show ${AVAHI_GROUP}

	;;
    POST-INSTALL)
	;;
esac
#EOF
