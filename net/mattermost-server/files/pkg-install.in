#!/bin/sh

MATTERMOST_GROUP="%%MATTERMOST_GROUP%%"
MATTERMOST_OWNER="%%MATTERMOST_OWNER%%"

MATTERMOST_GROUP_ID="%%MATTERMOST_GROUP_ID%%"
MATTERMOST_OWNER_ID="%%MATTERMOST_OWNER_ID%%"

PKG_PREFIX="/notexist"

set -x

case $2 in 
    PRE-INSTALL)
	pw group add ${MATTERMOST_GROUP}  -g ${MATTERMOST_GROUP_ID}
	pw user add ${MATTERMOST_OWNER} -g ${MATTERMOST_GROUP}  \
	    -d ${PKG_PREFIX} -s /usr/sbin/nologin -u ${MATTERMOST_OWNER_ID} \
	    -c "MATTERMOST"
	pw group mod ${MATTERMOST_GROUP} -M ${MATTERMOST_OWNER}
	pw group show ${MATTERMOST_GROUP}
	pw user show ${MATTERMOST_OWNER}

	;;
    POST-INSTALL)
	;;
esac
exit 0
#EOF
